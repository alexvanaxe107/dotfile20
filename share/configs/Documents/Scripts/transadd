#!/bin/sh

# Mimeapp script for adding torrent to transmission-daemon, but will also start the daemon first if not running.

# transmission-daemon sometimes fails to take remote requests in its first moments.

#pgrep -x transmission-da || (transmission-daemon && notify-send "Starting transmission daemon..." && sleep 3 && pkill -RTMIN+7 i3blocks)
source /home/alexvanaxe/.config/bspwm/themes/bsp.cfg
chosen="$(printf "Other\\nMovie\\nTV\\nMusic" | dmenu -i -p "Choose the download: " )"

case $chosen  in
	"Movie") transmission-remote -a "$1" --no-start-paused --torrent-done-script /home/alexvanaxe/Documents/Scripts/transend_video && notify-send  "ðŸ”½ Torrent added" "Started downloading a movie at $1";;
	"TV") transmission-remote -a "$1" --no-start-paused --torrent-done-script /home/alexvanaxe/Documents/Scripts/transend_tv && notify-send  "ðŸ”½ Torrent added" "Started downloading a tv show at $1";;
	"Music") transmission-remote -a "$1" --no-start-paused --torrent-done-script /home/alexvanaxe/Documents/Scripts/transend_music && notify-send  "ðŸ”½ Torrent added" "Started downloading some music at $1";;
	"Other") transmission-remote -a "$1" --no-start-paused --torrent-done-script /home/alexvanaxe/Documents/Scripts/transend && notify-send  "ðŸ”½ Torrent added to Other" "Started downloading $1";;
	*) notify-send "Canceled" "The torrent download was CANCELED"
esac
