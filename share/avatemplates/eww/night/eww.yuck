(defwindow wfortune
    :monitor 0
    :stacking "bg"
    :windowtype "desktop"
    :wm-ignore false
    :geometry (geometry :x "2%"
                       :y "6%"
                       :height "10%"
                       :width "25%"
                       :anchor "top right")
    (fortune_layout))

(defwindow wrss
    :monitor 0
    :stacking "bg"
    :windowtype "desktop"
    :wm-ignore false
    :geometry (geometry :x "2%"
                       :y "6%"
                       :height "10%"
