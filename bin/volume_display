#!/usr/bin/env bash

is_muted() {
    local vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"
    if [[ "$vol" == *"MUTED"* ]]; then
        echo "yes"
    else
        echo "no"
    fi
}

get_volume() {
    local vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"
    local vol="$(echo "$vol" | cut -d ' ' -f 2)"
    vol=$(echo "${vol}*100/1" | bc)

    if [ "$(is_muted)" = "yes" ]
    then
        vol="$vol% MUTED"
    fi
    echo "$vol"
}

_notify_volume() {
    local volume="$(get_volume)"
    local icon=""
    if [ "$volume" -eq "0" ]
    then
        icon=""
    elif [ "$volume" -gt "50" ]
    then
        icon=""
    elif [ "$volume" -eq "50" ]
    then
        icon=""
    elif [ "$volume" -lt "50" ]
    then
        icon=""
    fi

    if [ "$(is_muted)" = "yes" ]
    then
        icon=""
    fi
}

get_volume
